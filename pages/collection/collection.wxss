/* pages/collection/collection.wxss */
.book {
  position: relative;
  width: 90%;
  height: 40px;
  padding: 18px 10px 18px 10px;
  margin: 0 auto;
  font-size: 13px;
  color: #808080; 
  border-bottom: 1px solid #808080;
}
.bookName {
  display: inline-block;
  padding-right: 20px;
  margin-bottom: 10px;
  font-size: 16px;
  color: #000000;
}
.bookStatus {
  margin-right: 15px;
  color: white;
  text-align: center;
  background: green;
}
.nBook {
  background: #808080;
}
.cancel_icon {
  position: absolute;
  top: 25px;
  right: 15px;
  width: 25px;
  height: 25px;
  z-index: 10;
}