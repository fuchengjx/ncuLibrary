<!--pages/user/user.wxml-->
<view class='body'>
  <view class='header'>
    <view class='user'>
      <open-data class='avatar' type="userAvatarUrl"></open-data>
      <!--<image class='avatar' src="{{userInfo.avatarUrl}}"></image>-->
    </view>
  </view>

  <view class='content'>
    <text>黑白钢琴键上的徘徊</text>
      <view class='label'>
        <view class='collect' bindtap="goCollection">
          <image class="collect_icon label_icon" src="http://ppqz7y0vq.bkt.clouddn.com/collect_icon.png"></image>
          <text>
            我的收藏
          </text>
        </view>
        <view class='history'>
          <image class="history_icon label_icon" src="http://ppqz7y0vq.bkt.clouddn.com/history_icon.png"></image>
          <text>
            浏览历史
          </text>
        </view>
    </view>
  </view>

<view class='nav'>
  <view class='about'>
    <image class="nav_icon" src="http://ppqz7y0vq.bkt.clouddn.com/about_icon.png"></image>
    <text>关于我们</text>
    <image class="go" src="http://ppqz7y0vq.bkt.clouddn.com/go_icon.png"></image>
  </view>
  <view class='share'>
    <image class="nav_icon" src="http://ppqz7y0vq.bkt.clouddn.com/share_icon.png"></image>
    <text>分享</text>
    <image class="go" src="http://ppqz7y0vq.bkt.clouddn.com/go_icon.png"></image>
  </view>
</view>

</view>
