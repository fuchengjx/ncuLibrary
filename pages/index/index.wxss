.header {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 20px 0 20px 0;
  width: 92%;
  margin: 0 auto;
}
.input_icon {
  width: 20px;
  height: 20px;
  position: absolute;
  top: 10px;
  left: 15px;
}
.header .input {
  /* display: inline-block; */
  position: relative;
  flex: 8;
  padding: 6px;
  margin-top: 2px;
  border-radius: 50px;
  background: #ededed;
}
.input input {
  padding-left: 35px;
  font-size: 13px;
}
.popup_icon {
  width: 25px;
  height: 25px;
}
.content {
  width: 92%;
  margin: 0 auto;
}
.contentTitle text {
  height: 25px;
  line-height: 25px;
  padding-right: 30px;
  background: url("http://img.lib.exql.top/popup_icon.png") no-repeat right 50%;
  background-size: 25px 25px;
}
.bookList {
  margin-top: 10px;
}
.book {
  height: 115px;
  display: flex;
  align-items: flex-start;
  border-radius: 3px;
  margin-bottom: 20px;
  box-shadow: 0px 3px 14px #BfBfBf;
}
.cover {
  position: absolute;
  width: 90px;
  height: 105px;
  margin-top: 5px;
  margin-left: 10px;
  margin-right: 10px;
  border-radius: 5px;
  box-shadow: 0 2px 14px;
}
.bookInfo {
  flex: 1;
  color: #808080;
  font-size: 13px;
  padding-left: 120px;
  padding-right: 10px;
  margin-top: 2px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
}
.bookName {
  color: #000000;
  font-size: 15px;
}
.author {
  display: inline-block;
  padding-bottom: 5px;
  color: #474747;
}
