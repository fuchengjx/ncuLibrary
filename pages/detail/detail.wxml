<!--pages/detail/detail.wxml-->
<view>
  <view class="books" wx:for="{{bookData}}" wx:key="index" >
    <image class="cover" src="{{item.cover}}"></image>
    <view class="bookSidebar">
      <text class="bookName {{choose==1?'nocollect':'collect'}}" id="{{item.bookId}}" bindtap="changeChoose">{{item.bookName}} \n</text>
      <text class="bookStatus {{item.bookStatus==='可借'?'':'nBook'}}">\n {{item.bookStatus}} \n</text>
      <text class="label">作者: </text>
      <text class="author">{{item.author}} \n</text>
      <text class="label">索书号：</text>
      <text class="bookIndex">{{item.isbn}} \n</text>
      <text class="label">出版: </text>
      <text class="bookPublishers">{{item.press}} \n</text>
      <text class="label">类别：</text> 
      <text class="bookCategory">{{item.category}} \n</text>
    </view>
    <view class="summary">
      <text class="briefTitle">内容简介</text> <text class="more" bindtap="changeFold">{{brandFold?"展开":"收起"}}</text>
      <text class="brief" class="{{active==1?'show':'hide'}}">
        {{item.summary}}
      </text>
    </view>
    <!-- 后端暂时没有该数据 -->
