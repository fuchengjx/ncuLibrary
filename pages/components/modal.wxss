/* pages/components/modal.wxss */
.mask {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.4);
  z-index: 9999;
}
.modal_content {
  display: flex;
  flex-direction: column;
  width: 80%;
  background: #fff;
  border-radius: 10rpx;
}
.modal_wrapper {
  position: absolute;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 2rpx solid rgba(7,17,27,0.1);
}
.cancel_btn, .confirm_btn {
  /* flex: 1; */
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
}
.cancel_btn {
  border-right: 2rpx solid rgba(7,17,27,0.1);
}